<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <title>Schedule Builder</title>

  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');
    html, body {
      font-family: 'Inter', sans-serif;
      height: 100%;
      overflow: hidden; 
    }
    body {
      background-color: #0F172A;
    }
    .sidebar {
      background-color: #1E293B;
    }
    .main-content {
      background-color: #0F172A;
    }
    .card {
      background-color: #1E293B;
    }
    .form-input {
      background-color: #334155;
      border: 1px solid #475569;
      border-radius: 0.5rem;
      padding: 0.75rem 1rem;
      color: white;
      width: 100%;
    }
    .form-input::placeholder {
      color: #94A3B8;
    }
    .form-input:focus {
      outline: none;
      border-color: #3B82F6;
      box-shadow: 0 0 0 2px #3B82F6;
    }
    .btn-primary {
      background-color: #3B82F6;
      color: white;
      font-weight: 600;
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      width: 100%;
      transition: background-color 0.2s;
    }
    .btn-primary:hover {
      background-color: #2563EB;
    }
    
    .custom-scroll::-webkit-scrollbar {
      width: 6px;
      height: 6px;
    }
    .custom-scroll::-webkit-scrollbar-track {
      background: #0F172A; 
    }
    .custom-scroll::-webkit-scrollbar-thumb {
      background: #334155; 
      border-radius: 3px;
    }
    .custom-scroll::-webkit-scrollbar-thumb:hover {
      background: #475569; 
    }
  </style>
</head>

<body class="text-gray-200 flex h-screen overflow-hidden">

  <div id="sidebar-overlay" class="fixed inset-0 bg-black/50 z-40 hidden transition-opacity opacity-0"></div>

  <aside class="sidebar w-16 lg:w-64 flex-shrink-0 flex flex-col items-center lg:items-start border-r border-gray-800 z-30">
    <div class="h-16 flex items-center justify-center lg:justify-start lg:px-6 w-full">
      <h1 class="text-xl font-bold text-white hidden lg:block text-blue-400">
        CollegeAssist
      </h1>
      <i data-lucide="graduation-cap" class="w-8 h-8 text-blue-400 lg:hidden"></i>
    </div>

    <nav class="space-y-4 w-full p-2 lg:p-4 mt-4">
      <a href="#" class="flex items-center justify-center lg:justify-start p-3 rounded-lg text-blue-400 bg-blue-900/50 border border-blue-700/50 group relative">
        <i data-lucide="calendar-days" class="w-6 h-6 flex-shrink-0"></i>
        <span class="text-sm font-medium ml-4 hidden lg:block">Schedule</span>
      </a>
    </nav>
  </aside>

  <main class="main-content flex-1 flex flex-col relative min-w-0">
    <header class="h-16 flex items-center justify-between px-4 lg:px-8 border-b border-gray-800 bg-[#0F172A] flex-shrink-0">
      <h1 class="text-xl lg:text-2xl font-bold text-white truncate">
        Plan Schedule
      </h1>
      
      <div class="flex items-center space-x-3">
        <button id="mobile-add-btn" class="xl:hidden flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-3 py-1.5 rounded-full text-sm font-medium transition-colors">
          <i data-lucide="plus" class="w-4 h-4"></i>
          <span>Add</span>
        </button>

        <div class="hidden sm:block bg-green-500/10 text-green-400 font-semibold px-3 py-1 rounded-full text-xs border border-green-500/20">
          Sync Active
        </div>
      </div>
    </header>

    <div class="flex-1 overflow-y-auto custom-scroll p-4 lg:p-8">
      
      <div class="mb-6">
        <div class="card rounded-2xl p-2 lg:p-3 overflow-x-auto custom-scroll">
          <div id="day-picker-container" class="flex space-x-2 min-w-max lg:min-w-0">
          </div>
        </div>
      </div>

      <div class="pb-20"> 
        <div class="flex justify-between items-center text-sm mb-4">
          <h2 class="text-xl font-bold text-white">Time Sheet</h2>
        </div>

        <div id="schedule-list-container" class="space-y-3">
        </div>

        <div id="nothing-found" class="hidden flex-col items-center text-center text-gray-500 py-12">
            <div class="bg-gray-800/50 p-4 rounded-full mb-4">
              <i data-lucide="calendar-off" class="w-8 h-8 text-gray-400"></i>
            </div>
            <p class="text-base font-medium text-gray-400">No classes today</p>
        </div>
      </div>
    </div>
  </main>

  <aside id="right-sidebar" class="fixed inset-y-0 right-0 w-full sm:w-96 bg-[#1E293B] z-50 transform translate-x-full transition-transform duration-300 xl:translate-x-0 xl:static xl:block xl:w-80 border-l border-gray-800 shadow-2xl xl:shadow-none flex flex-col h-full">
    
    <div class="p-6 pb-2 flex justify-between items-center xl:hidden">
      <h2 class="text-xl font-bold text-white">Add New Subject</h2>
      <button id="close-sidebar-btn" class="p-2 bg-gray-800 rounded-lg text-gray-400 hover:text-white">
        <i data-lucide="x" class="w-5 h-5"></i>
      </button>
    </div>

    <div class="hidden xl:block p-6 pb-2">
      <h2 class="text-xl font-bold text-white">Add New Subject</h2>
    </div>

    <div class="p-6 pt-2 flex-1 overflow-y-auto custom-scroll">
      <form id="add-subject-form" class="space-y-4">
        <div>
          <label for="subject-name" class="block text-xs uppercase font-bold text-gray-500 mb-1">Subject Name</label>
          <input type="text" id="subject-name" class="form-input" placeholder="e.g. Data Structures" required />
        </div>

        <div>
          <label for="faculty-name" class="block text-xs uppercase font-bold text-gray-500 mb-1">Faculty Name</label>
          <input type="text" id="faculty-name" class="form-input" placeholder="e.g. Dr. Smith" required />
        </div>

        <div>
          <label for="room-number" class="block text-xs uppercase font-bold text-gray-500 mb-1">Room Number</label>
          <input type="text" id="room-number" class="form-input" placeholder="e.g. 301-B" />
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div>
            <label for="start-time" class="block text-xs uppercase font-bold text-gray-500 mb-1">Start</label>
            <input type="time" id="start-time" class="form-input" required />
          </div>
          <div>
            <label for="end-time" class="block text-xs uppercase font-bold text-gray-500 mb-1">End</label>
            <input type="time" id="end-time" class="form-input" required />
          </div>
        </div>

        <div>
          <label for="course-name" class="block text-xs uppercase font-bold text-gray-500 mb-1">Course / Branch</label>
          <input type="text" id="course-name" class="form-input" placeholder="e.g. CSE" required />
        </div>

        <div>
          <label for="section-details" class="block text-xs uppercase font-bold text-gray-500 mb-1">Section</label>
          <input type="text" id="section-details" class="form-input" placeholder="e.g. A1" required />
        </div>

        <div class="pt-4">
          <button type="submit" class="btn-primary flex items-center justify-center gap-2">
            <i data-lucide="plus-circle" class="w-5 h-5"></i>
            Add to Schedule
          </button>
        </div>
      </form>
    </div>
  </aside>

  <script>
    lucide.createIcons();

    let timetableData = {};
    try {
        timetableData = <%- JSON.stringify(scheduleData || {}) %>;
    } catch (e) {
        console.error("Failed to load schedule data", e);
        timetableData = {};
    }

    const days = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
    let currentDay = 'Mon';

    const dayPickerContainer = document.getElementById('day-picker-container');
    const scheduleListContainer = document.getElementById('schedule-list-container');
    const nothingFoundMessage = document.getElementById('nothing-found');
    const addSubjectForm = document.getElementById('add-subject-form');
    const rightSidebar = document.getElementById('right-sidebar');
    const sidebarOverlay = document.getElementById('sidebar-overlay');
    
    function openSidebar() {
        rightSidebar.classList.remove('translate-x-full');
        sidebarOverlay.classList.remove('hidden');
        setTimeout(() => sidebarOverlay.classList.remove('opacity-0'), 10);
    }

    function closeSidebar() {
        rightSidebar.classList.add('translate-x-full');
        sidebarOverlay.classList.add('opacity-0');
        setTimeout(() => sidebarOverlay.classList.add('hidden'), 300);
    }

    document.getElementById('mobile-add-btn').addEventListener('click', openSidebar);
    document.getElementById('close-sidebar-btn').addEventListener('click', closeSidebar);
    sidebarOverlay.addEventListener('click', closeSidebar);


    function renderSchedule() {
      scheduleListContainer.innerHTML = '';
      const scheduleItems = timetableData[currentDay] || [];

      if (scheduleItems.length === 0) {
        nothingFoundMessage.style.display = 'flex';
      } else {
        nothingFoundMessage.style.display = 'none';
        scheduleItems.sort((a, b) => a.start.localeCompare(b.start));

        scheduleItems.forEach(item => {
          const card = document.createElement('div');
          const itemId = item.id || item._id;
          
          card.className = 'card p-4 rounded-xl flex items-start justify-between border border-gray-700/50 hover:border-blue-500/30 transition-colors group';
          card.innerHTML = `
            <div class="flex items-start gap-4 flex-1 min-w-0">
              <div class="flex flex-col items-center justify-center min-w-[3.5rem] pt-1">
                <span class="text-sm font-bold text-white">${formatTime(item.start)}</span>
                <div class="w-px h-2 bg-gray-600 my-1"></div>
                <span class="text-xs text-gray-400">${formatTime(item.end)}</span>
              </div>
              <div class="flex-1 min-w-0 border-l border-gray-700 pl-4">
                <h3 class="font-bold text-base text-white truncate pr-2">${item.subject}</h3>
                <div class="flex flex-wrap gap-x-3 gap-y-1 mt-1">
                  <span class="text-xs text-blue-400 font-medium flex items-center">
                     <i data-lucide="user" class="w-3 h-3 mr-1"></i> ${item.faculty}
                  </span>
                  <span class="text-xs text-gray-400 flex items-center">
                     <i data-lucide="map-pin" class="w-3 h-3 mr-1"></i> ${item.room || 'N/A'}
                  </span>
                </div>
              </div>
            </div>
            <button class="delete-btn ml-2 p-2 text-gray-500 hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-colors" data-id="${itemId}">
               <i data-lucide="trash-2" class="w-4 h-4"></i>
            </button>
          `;
          
          card.querySelector('.delete-btn').addEventListener('click', (e) => {
             e.stopPropagation();
             deleteSubject(itemId);
          });
          
          scheduleListContainer.appendChild(card);
        });
        lucide.createIcons();
      }
    }

    function formatTime(timeStr) {
        if(!timeStr) return '';
        const [hour, min] = timeStr.split(':');
        return `${parseInt(hour)}:${min}`;
    }

    function renderDayPicker() {
      dayPickerContainer.innerHTML = '';
      days.forEach((day, index) => {
        const button = document.createElement('button');
        const isActive = currentDay === day;
        button.className = `
          flex-shrink-0 flex flex-col items-center justify-center w-14 h-16 rounded-xl transition-all duration-200
          ${isActive ? 'bg-blue-600 text-white shadow-lg shadow-blue-900/50 scale-105' : 'bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-gray-200'}
        `;
        button.innerHTML = `
          <span class="text-[10px] uppercase font-bold tracking-wider opacity-80">${day}</span>
          <span class="text-lg font-bold">${index + 1}</span>
        `;
        button.addEventListener('click', () => {
          currentDay = day;
          renderDayPicker();
          renderSchedule();
        });
        dayPickerContainer.appendChild(button);
      });
    }

    async function handleAddSubject(e) {
      e.preventDefault();
      
      const payload = {
        day: currentDay,
        subject: document.getElementById('subject-name').value,
        faculty: document.getElementById('faculty-name').value,
        room: document.getElementById('room-number').value,
        start: document.getElementById('start-time').value,
        end: document.getElementById('end-time').value,
        course: document.getElementById('course-name').value,
        section: document.getElementById('section-details').value,
      };

      try {
        const res = await fetch('/api/schedule/add', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        if (!res.ok) throw new Error('Failed to save to database');
        
        const savedItem = await res.json(); 

        if (!timetableData[currentDay]) timetableData[currentDay] = [];
        timetableData[currentDay].push(savedItem);
        
        renderSchedule();
        addSubjectForm.reset();
        
        if(window.innerWidth < 1280) {
            closeSidebar();
        }

      } catch (err) {
        console.error('Error:', err);
        alert('Error saving schedule: ' + err.message);
      }
    }

    async function deleteSubject(id) {
      if(!confirm("Are you sure you want to remove this class?")) return;

      try {
        const res = await fetch(`/api/schedule/delete/${id}`, { method: 'DELETE' });
        
        if (!res.ok) throw new Error('Failed to delete from database');

        timetableData[currentDay] = timetableData[currentDay].filter(item => (item.id !== id && item._id !== id));
        renderSchedule();

      } catch (err) {
        console.error('Error:', err);
        alert('Server error while deleting.');
      }
    }

    addSubjectForm.addEventListener('submit', handleAddSubject);

    renderDayPicker();
    renderSchedule();
  </script>

</body>
</html>