    let selectedCourses = [];
    try {
        const rawData = '<%- (typeof savedCourses !== "undefined") ? JSON.stringify(savedCourses) : "[]" %>';
        selectedCourses = JSON.parse(rawData);
    } catch (e) {
        console.log("Running in static preview mode. Defaulting to empty selection.");
        selectedCourses = [];
    }

    const courseGrid = document.getElementById('course-grid');
    const selectedList = document.getElementById('selected-list');
    const emptyCart = document.getElementById('empty-cart');
    const totalCreditsEl = document.getElementById('total-credits');
    const searchInput = document.getElementById('course-search');
    const deptFilter = document.getElementById('dept-filter');
    const rightSidebar = document.getElementById('right-sidebar');
    const sidebarOverlay = document.getElementById('sidebar-overlay');
    const mobileCount = document.getElementById('mobile-count');
    const confirmBtn = document.getElementById('confirm-btn');

    function toggleSidebar(show) {
      if (show) {
        rightSidebar.classList.remove('translate-x-full');
        sidebarOverlay.classList.remove('hidden');
        setTimeout(() => sidebarOverlay.classList.remove('opacity-0'), 10);
      } else {
        rightSidebar.classList.add('translate-x-full');
        sidebarOverlay.classList.add('opacity-0');
        setTimeout(() => sidebarOverlay.classList.add('hidden'), 300);
      }
    }

    document.getElementById('mobile-cart-btn').addEventListener('click', () => toggleSidebar(true));
    document.getElementById('close-sidebar-btn').addEventListener('click', () => toggleSidebar(false));
    sidebarOverlay.addEventListener('click', () => toggleSidebar(false));

    function renderCourses(courses) {
      courseGrid.innerHTML = '';
      if(courses.length === 0) {
        courseGrid.innerHTML = `<div class="col-span-full text-center text-gray-500 py-10">No courses found matching your criteria.</div>`;
        return;
      }

      courses.forEach(course => {
        const isSelected = selectedCourses.some(c => c.id === course.id);
        
        const card = document.createElement('div');
        card.className = `card rounded-xl border transition-all duration-200 group relative overflow-hidden flex flex-col ${isSelected ? 'border-green-500/50' : 'border-gray-700/50 hover:border-blue-500/50'}`;
        
        card.innerHTML = `
          <div class="h-40 w-full overflow-hidden relative">
            <img src="${course.image}" alt="${course.name}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105">
            <div class="absolute inset-0 bg-gradient-to-t from-[#1E293B] to-transparent opacity-80"></div>
            
            <span class="absolute top-3 left-3 bg-black/60 backdrop-blur-md text-white text-xs font-bold px-2 py-1 rounded border border-white/10">
              ${course.code}
            </span>
            <span class="absolute bottom-3 right-3 bg-blue-600 text-white text-xs font-bold px-2 py-1 rounded shadow-lg flex items-center">
              <i data-lucide="star" class="w-3 h-3 mr-1 fill-current"></i> 4.8
            </span>
          </div>
          
          <div class="p-5 flex-1 flex flex-col">
            <h3 class="text-lg font-bold text-white mb-2 leading-tight line-clamp-2">${course.name}</h3>
            
            <div class="flex items-center text-sm text-gray-400 mb-2">
              <i data-lucide="user-circle" class="w-4 h-4 mr-2 text-blue-400"></i>
              ${course.faculty}
            </div>

            <div class="flex items-center justify-between text-xs text-gray-500 mt-auto pt-4 border-t border-gray-700/50">
              <span class="flex items-center"><i data-lucide="clock" class="w-3 h-3 mr-1"></i> ${course.credits * 15} Hours</span>
              <span class="flex items-center"><i data-lucide="bar-chart" class="w-3 h-3 mr-1"></i> Beginner</span>
            </div>
            
            <div class="mt-4 flex gap-2">
                <button onclick="toggleCourse('${course.id}')" 
                class="flex-1 py-2.5 rounded-lg text-sm font-semibold transition-all flex items-center justify-center gap-2 ${isSelected ? 'bg-green-600 text-white hover:bg-green-700' : 'bg-blue-600 text-white hover:bg-blue-700'}">
                ${isSelected ? '<i data-lucide="check" class="w-4 h-4"></i> Selected' : 'Select Course'}
                </button>
            </div>
          </div>
        `;
        courseGrid.appendChild(card);
      });
      lucide.createIcons();
    }

    function renderSelection() {
      selectedList.innerHTML = '';
      let total = 0;

      if (selectedCourses.length === 0) {
        selectedList.appendChild(emptyCart);
      } else {
        selectedCourses.forEach(course => {
          total += course.credits;
          const item = document.createElement('div');
          item.className = 'bg-gray-800/50 rounded-lg p-3 border border-gray-700 flex justify-between items-center group animate-fade-in';
          item.innerHTML = `
            <div class="flex items-center gap-3">
              <img src="${course.image}" class="w-10 h-10 rounded object-cover" />
              <div>
                <p class="text-sm font-bold text-white line-clamp-1">${course.name}</p>
                <p class="text-xs text-gray-400">${course.code} â€¢ ${course.credits} Credits</p>
              </div>
            </div>
            <button onclick="toggleCourse('${course.id}')" class="text-gray-500 hover:text-red-500 transition-colors p-2 rounded-full hover:bg-gray-700">
              <i data-lucide="trash-2" class="w-4 h-4"></i>
            </button>
          `;
          selectedList.appendChild(item);
        });
      }

      totalCreditsEl.textContent = `${total} / 24`;
      totalCreditsEl.className = total > 24 ? "text-2xl font-bold text-red-500" : "text-2xl font-bold text-white";
      mobileCount.textContent = selectedCourses.length;
      lucide.createIcons();
    }

    window.toggleCourse = function(id) {
      const index = selectedCourses.findIndex(c => c.id === id);
      if (index === -1) {
        const course = availableCourses.find(c => c.id === id);
        selectedCourses.push(course);
      } else {
        selectedCourses.splice(index, 1);
      }
      
      filterAndRender();
      renderSelection();
    };

    async function confirmRegistration() {
      if(selectedCourses.length === 0) return alert("Please select at least one course.");
      
      const btn = document.getElementById('confirm-btn');
      const originalText = btn.innerHTML;
      btn.innerHTML = 'Saving...';
      btn.disabled = true;

      try {
        const response = await fetch('/course/register', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ courses: selectedCourses })
        });

        const result = await response.json();

        if (response.ok) {
            alert("Registration successful! Your courses are saved.");
        } else {
            alert("Error: " + result.error);
        }

      } catch (err) {
        console.error(err);
        alert("Failed to connect to server.");
      } finally {
        btn.innerHTML = originalText;
        btn.disabled = false;
      }
    }

    function filterAndRender() {
        const term = searchInput.value.toLowerCase();
        const dept = deptFilter.value;

        const filtered = availableCourses.filter(c => {
            const matchesSearch = c.name.toLowerCase().includes(term) || 
                                c.code.toLowerCase().includes(term) ||
                                c.faculty.toLowerCase().includes(term);
            const matchesDept = dept === 'all' || c.dept === dept;
            
            return matchesSearch && matchesDept;
        });
        
        renderCourses(filtered);
    }

    searchInput.addEventListener('input', filterAndRender);
    deptFilter.addEventListener('change', filterAndRender);

    renderCourses(availableCourses);
    renderSelection();

  </script>
